  "components": {
    "schemas": {
      "BookState": {
        "enum": [
          "BookInProgress",
          "Booked",
          "Paid",
          "Plaid"
        ]
      },
      "BookTimeSlotRequest": {
        "required": [
          "plannedDayId",
          "courtId",
          "timeSlotNumber",
          "weekNumber",
          "bookState"
        ],
        "type": "object",
        "properties": {
          "plannedDayId": {
            "type": "string",
            "format": "uuid"
          },
          "courtId": {
            "type": "string",
            "format": "uuid"
          },
          "timeSlotNumber": {
            "type": "integer",
            "format": "int32"
          },
          "weekNumber": {
            "type": "integer",
            "format": "int32"
          },
          "bookState": {
            "$ref": "#/components/schemas/BookState"
          }
        }
      },
      "Comparison": {
        "enum": [
          "Equal",
          "LessThan",
          "LessThanOrEqual",
          "GreaterThan",
          "GreaterThanOrEqual",
          "NotEqual",
          "Contains",
          "StartsWith",
          "EndsWith"
        ]
      },
      "CourtResponse": {
        "required": [
          "id",
          "number"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "number": {
            "type": "integer",
            "format": "int32"
          }
        }
      },
      "CreateCourtRequest": {
        "required": [
          "number"
        ],
        "type": "object",
        "properties": {
          "number": {
            "type": "integer",
            "format": "int32"
          }
        }
      },
      "CreatePlannedDayRequest": {
        "required": [
          "dayOfWeek",
          "numberOfTimeSlots"
        ],
        "type": "object",
        "properties": {
          "dayOfWeek": {
            "$ref": "#/components/schemas/DayOfWeek"
          },
          "numberOfTimeSlots": {
            "type": "integer",
            "format": "int32"
          }
        }
      },
      "CreateSiteRequest": {
        "required": [
          "name",
          "closedDays",
          "courts",
          "schedule"
        ],
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "closedDays": {
            "type": [
              "null",
              "array"
            ],
            "items": {
              "type": "string",
              "format": "date"
            }
          },
          "courts": {
            "type": [
              "null",
              "array"
            ],
            "items": {
              "$ref": "#/components/schemas/CreateCourtRequest"
            }
          },
          "schedule": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/CreatePlannedDayRequest"
            }
          }
        }
      },
      "DayOfWeek": {
        "enum": [
          "Sunday",
          "Monday",
          "Tuesday",
          "Wednesday",
          "Thursday",
          "Friday",
          "Saturday"
        ]
      },
      "ExpressionFilter": {
        "type": "object",
        "properties": {
          "propertyName": {
            "type": [
              "null",
              "string"
            ]
          },
          "valueString": {
            "type": [
              "null",
              "string"
            ]
          },
          "comparison": {
            "$ref": "#/components/schemas/Comparison"
          },
          "filterAssociation": {
            "$ref": "#/components/schemas/FilterAssociation"
          }
        }
      },
      "FilterAssociation": {
        "enum": [
          "And",
          "Or"
        ]
      },
      "FilterGroup": {
        "type": "object",
        "properties": {
          "filters": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ExpressionFilter"
            }
          },
          "filterAssociation": {
            "$ref": "#/components/schemas/FilterAssociation"
          }
        }
      },
      "PageOfOfSiteResponse": {
        "type": "object",
        "properties": {
          "pageNumber": {
            "type": "integer",
            "format": "int32"
          },
          "pageSize": {
            "type": "integer",
